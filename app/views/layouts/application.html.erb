<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= @page_title ? @page_title : 'Welcome' %> | The Bookstore</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'The Bookstore', root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= params[:controller] == 'books' ? 'active' : '' %>"><%= link_to('Home', root_path) %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">New <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li class="<%= params[:controller] == 'books' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to('Book', new_book_path) %></li>
            <li class="<%= params[:controller] == 'categories' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to('Category', new_category_path) %></li>
            <li class="<%= params[:controller] == 'authors' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to('Author', new_author_path) %></li>
            <li class="<%= params[:controller] == 'publishers' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to('Publisher', new_publisher_path) %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li class="<%= params[:controller] == 'categories' && params[:action] == 'index' ? 'active' : '' %>"><%= link_to('Categories', categories_path) %></li>
            <li class="<%= params[:controller] == 'authors' && params[:action] == 'index' ? 'active' : '' %>"><%= link_to('Authors', authors_path) %></li>
            <li class="<%= params[:controller] == 'publishers' && params[:action] == 'index' ? 'active' : '' %>"><%= link_to('Publishers', publishers_path) %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
</nav>

<header>
  <div class="container">
    <h1>The Bookstore
      <small><%= @page_title ? @page_title : 'Welcome' %></small>
    </h1>
  </div>
</header>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <!--Alerts & Messages-->
        <% if flash[:notice] %>
            <div class="alert alert-success">
              <%= flash[:notice] %>
            </div>
        <% end %>

        <% if flash[:alert] %>
            <div class="aler alert-warning">
              <%= flash[:alert] %>
            </div>
        <% end %>

      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <%= yield %>
      </div>
      <div class="col-md-4">
        <%= render 'partials/sidebar' %>
      </div>
    </div>
  </div>
</section>

<footer>
  <div class="container">
    <p>Copyright &copy;2016 The Bookstore | All Rights Reserved</p>
    <p>
      <%= link_to('About', about_index_path) %> |
      <%= link_to('Contact', about_index_path) %> |
      <%= link_to('Help', about_index_path) %>
    </p>
  </div>
</footer>

</body>
</html>
