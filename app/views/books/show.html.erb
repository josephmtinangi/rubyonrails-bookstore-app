<div class="books-show">
  <h2><%= @book.title %></h2>
  <div class="row">
    <div class="col-sm-8">
      <%= @book.coverpath ? image_tag(@book.coverpath, class: 'img-responsive') : 'no cover image' %>
    </div>
    <div class="col-sm-4">
      <h3>Book Info</h3>
      <ul class="list_unstyled">
        <li><strong>Category: </strong><%= @book.category.name %>></li>
        <li><strong>Author: </strong><%= @book.author.first_name %> <%= @book.author.last_name %></li>
        <li><strong>Publisher: </strong><%= @book.publisher.name %></li>
        <li><strong>Year: </strong><%= @book.year %></li>
        <li><strong>ISBN: </strong><%= @book.isbn %></li>
        <li><strong>Format: </strong><%= @book.format %></li>
        <li><strong>Pages: </strong><%= @book.pages %>></li>
      </ul>
      <%= link_to("Buy for Tshs " + @book.price, @book.buy, class: 'btn btn-success', target: '_blank') %>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h4>Excerpt</h4>
      <p>
        <%= @book.excerpt %>
      </p>
    </div>
  </div>
</div>