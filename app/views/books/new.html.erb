<h2>Add a new book</h2>

<%= form_for(@book, class: 'form-horizontal') do |f| %>
	<div class="form-group">
		<%= f.label :title, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :title, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :isbn, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :isbn, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<%= f.label :category, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<%= f.label :author, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.select :author_id, Author.all.collect {|x| [x.first_name + ' ' + x.last_name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<%= f.label :publisher, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.select :publisher_id, Publisher.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :format, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :format, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<%= f.label :excerpt, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_area :excerpt, class: 'form-control', rows: "10" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :pages, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.number_field :pages, class: 'form-control' %>
		</div>
	</div>	
	<div class="form-group">
		<%= f.label :price, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :price, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :buy, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :buy, class: 'form-control' %>
		</div>
	</div>				
	<div class="form-group">
		<div class="col-sm-5">
			<%= f.submit "Submit", class: "btn btn-primary btn-block" %>
		</div>
		<div class="col-sm-5">
			<%= link_to "Cancel", books_path, class: "btn btn-default" %>
		</div>
	</div>					
<% end %>