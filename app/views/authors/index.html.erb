<h2><%= @page_title %></h2>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @authors.each do |author| %>
        <tr>
          <td><%= author.first_name %> <%= author.last_name %></td>
          <td>
            <%= link_to 'Edit', edit_author_path(author) %> |
            <%= link_to 'Delete', delete_author_path(author) %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
