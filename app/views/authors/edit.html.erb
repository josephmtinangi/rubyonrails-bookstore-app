<h2>Edit author</h2>

<%= form_for @author, class: 'form-horizontal' do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-group">
      <div class="col-sm-5 col-sm-offset-2">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>
      <div class="col-sm-5">
        <%= link_to 'Cancel', authors_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>